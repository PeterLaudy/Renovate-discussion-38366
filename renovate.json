{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "schedule:daily",
        "group:allNonMajor",
        ":preserveSemverRanges"
    ],
    "lockFileMaintenance": {
        "enabled": true
    },
    "baseBranches": [
        "main"
    ],
    "ignorePaths": [
        "**/node_modules/**",
        "**/test/**",
        "**/tests/**"
    ],
    "gradle": { "enabled": true },

    "packageRules": [
        {
            "description": "The main rule to disable every update by default",
            "matchFileNames": [ "*" ],
            "matchPackageNames": [ "*" ],
            "matchUpdateTypes": [ "*" ],
            "enabled": false
        },
        {
            "description": "Enable non-major updates of all log4j packages in the libs.versions.toml file.",
            "groupName": "Non-major update for log4j",
            "matchFileNames": [ "/libs.versions.toml" ],
            "matchPackageNames": [ "/^org\\.apache\\.logging\\.log4j:log4j.*$/" ],
            "matchUpdateTypes": [ "minor", "patch" ],
            "enabled": true
        }
    ]
}
